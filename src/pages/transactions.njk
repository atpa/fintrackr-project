title: "FinTrackr \u2013 \u041e\u043f\u0435\u0440\u0430\u0446\u0438\u0438"
showHeader: true
scripts:
  - transactions
---

<main>
<!-- Форма для добавления новой операции -->
      <section class="card">
        <h2>Добавить операцию</h2>
        <form id="addTransactionForm">
          <div style="display: flex; flex-wrap: wrap; gap: 1rem">
            <label style="flex: 1 1 150px">
              Дата
              <input type="date" id="txDate" required />
            </label>
            <label style="flex: 1 1 150px">
              Счёт
              <select id="txAccount" required></select>
            </label>
            <label style="flex: 1 1 150px">
              Категория
              <select id="txCategory" required></select>
            </label>
            <label style="flex: 1 1 150px">
              Тип
              <select id="txType" required>
                <option value="income">Доход</option>
                <option value="expense">Расход</option>
              </select>
            </label>
            <label style="flex: 1 1 150px">
              Сумма
              <input type="number" id="txAmount" step="0.01" min="0" required />
            </label>
            <label style="flex: 1 1 150px">
              Валюта
              <select id="txCurrency" required>
                <option value="USD">USD</option>
                <option value="EUR">EUR</option>
                <option value="PLN">PLN</option>
                <option value="RUB">RUB</option>
              </select>
            </label>
            <label style="flex: 1 1 200px">
              Примечание
              <input type="text" id="txNote" />
            </label>
          </div>
          <button type="submit" class="btn-primary" style="margin-top: 1rem">
            Добавить
          </button>
        </form>
      </section>

      <!-- Фильтр операций -->
      <section class="card">
        <h2>Фильтр операций</h2>
        <form id="filterTxForm">
          <div style="display: flex; flex-wrap: wrap; gap: 1rem">
            <label style="flex: 1 1 150px">
              От
              <input type="date" id="filterStart" />
            </label>
            <label style="flex: 1 1 150px">
              До
              <input type="date" id="filterEnd" />
            </label>
            <label style="flex: 1 1 150px">
              Категория
              <select id="filterCategory">
                <option value="">Все</option>
              </select>
            </label>
            <label style="flex: 1 1 150px">
              Тип
              <select id="filterType">
                <option value="">Все</option>
                <option value="income">Доход</option>
                <option value="expense">Расход</option>
              </select>
            </label>
            <button
              type="submit"
              class="btn-primary"
              style="flex: 0 0 auto; align-self: flex-end"
            >
              Применить
            </button>
          </div>
        </form>
      </section>
      <!-- Таблица операций -->
      <section class="card">
        <h2>Список операций</h2>
        <table id="transactionsTable">
          <thead>
            <tr>
              <th>Дата</th>
              <th>Счёт</th>
              <th>Категория</th>
              <th>Тип</th>
              <th>Сумма</th>
              <th>Примечание</th>
              <th>Действия</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td colspan="7">Загрузка...</td>
            </tr>
          </tbody>
        </table>
      </section>
</main>
