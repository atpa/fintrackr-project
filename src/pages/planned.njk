title: "FinTrackr \u2013 \u041f\u043b\u0430\u043d\u043e\u0432\u044b\u0435 \u043e\u043f\u0435\u0440\u0430\u0446\u0438\u0438"
showHeader: true
scripts:
  - planned
---

<main>
<!-- Форма для создания плановой или цикличной операции -->
      <section class="card">
        <h2>Создать плановую операцию</h2>
        <p>
          Запланируйте будущие доходы и расходы: укажите дату начала, частоту и
          сумму. Система автоматически добавит операцию в вашу статистику по
          мере наступления.
        </p>
        <form id="addPlannedForm">
          <div style="display: flex; flex-wrap: wrap; gap: 1rem">
            <label style="flex: 1 1 150px">
              Дата начала
              <input type="date" id="plannedStart" required />
            </label>
            <label style="flex: 1 1 150px">
              Счёт
              <select id="plannedAccount" required></select>
            </label>
            <label style="flex: 1 1 150px">
              Категория
              <select id="plannedCategory" required></select>
            </label>
            <label style="flex: 1 1 150px">
              Тип
              <select id="plannedType" required>
                <option value="income">Доход</option>
                <option value="expense">Расход</option>
              </select>
            </label>
            <label style="flex: 1 1 150px">
              Сумма
              <input
                type="number"
                id="plannedAmount"
                step="0.01"
                min="0"
                required
              />
            </label>
            <label style="flex: 1 1 150px">
              Валюта
              <select id="plannedCurrency" required>
                <option value="USD">USD</option>
                <option value="EUR">EUR</option>
                <option value="PLN">PLN</option>
                <option value="RUB">RUB</option>
              </select>
            </label>
            <label style="flex: 1 1 200px">
              Частота
              <select id="plannedFrequency" required>
                <option value="daily">Ежедневно</option>
                <option value="weekly">Еженедельно</option>
                <option value="monthly">Ежемесячно</option>
                <option value="yearly">Ежегодно</option>
              </select>
            </label>
            <label style="flex: 1 1 200px">
              Примечание
              <input type="text" id="plannedNote" />
            </label>
          </div>
          <button type="submit" class="btn-primary" style="margin-top: 1rem">
            Добавить
          </button>
        </form>
      </section>
      <!-- Список запланированных операций -->
      <section class="card">
        <h2>Запланированные операции</h2>
        <table id="plannedTable">
          <thead>
            <tr>
              <th>Дата начала</th>
              <th>Частота</th>
              <th>Счёт</th>
              <th>Категория</th>
              <th>Тип</th>
              <th>Сумма</th>
              <th>Примечание</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td colspan="7">Загрузка...</td>
            </tr>
          </tbody>
        </table>
      </section>
</main>
