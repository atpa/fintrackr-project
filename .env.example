# FinTrackr Environment Variables
# Copy this file to .env and set your own values in production

# JWT Secret - MUST be changed in production!
# Generate a strong random secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=dev-secret-change

# Cookie Security
# Set to "true" in production when using HTTPS
COOKIE_SECURE=false

# Cookie SameSite Policy
# Options: "Strict", "Lax", "None"
# Default: "Strict" in production, "Lax" in development
# "Strict" provides better CSRF protection but may affect some legitimate cross-origin requests
COOKIE_SAMESITE=Lax

# Server Port
PORT=3000

# Data Persistence
# Set to "true" to disable file writes (useful for tests)
FINTRACKR_DISABLE_PERSIST=false
